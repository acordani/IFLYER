<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for @announce do |f| %>
        <%= f.input :title, placeholder:"Appartement centre ville Paris" %>
        <%= f.input :description, placeholder:"" %>
        <%= f.input :type, placeholder:"", collection: ["Appartement", "Maison", "Terrain", "Local Commercial"] %>
        <%= f.input :bed, collection: 1...6 %>
        <%= f.input :bath, collection: 1...6 %>
        <%= f.input :surface %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>





